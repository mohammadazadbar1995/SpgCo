<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spg.sgpco">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.spg.sgpco.controller.AppController"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.spg.sgpco.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spg.sgpco.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.spg.sgpco.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".register.VerifyCodeActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>