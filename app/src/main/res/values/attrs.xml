<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomEditText">
        <attr name="tvTitle" format="string" />
        <attr name="edtBody" format="string" />
        <attr name="hint" format="string" />
        <attr name="textColorHint" format="string" />
        <attr name="isRequired" format="boolean" />
        <attr name="edtIcon" format="reference" />
        <attr name="inputType" format="enum">
            <enum name="DESCRIPTION" value="0" />
            <enum name="NAME" value="1" />
            <enum name="MOBILE" value="2" />
            <enum name="PHONE" value="3" />
            <enum name="PASSWORD" value="4" />
            <enum name="CODEVERIFY" value="5" />

        </attr>

    </declare-styleable>

    <declare-styleable name="CustomMultiLineEditText">
        <attr name="tvTitleMulti" format="string" />
        <attr name="edtBodyMulti" format="string" />
        <attr name="hintMulti" format="string" />
        <attr name="textColorHintMulti" format="string" />
        <attr name="isRequiredMulti" format="boolean" />
        <attr name="inputTypeMulti" format="enum">
            <enum name="DESCRIPTION" value="0" />
            <enum name="NAME" value="1" />
            <enum name="MOBILE" value="2" />
            <enum name="PHONE" value="3" />
            <enum name="PASSWORD" value="4" />
            <enum name="CODEVERIFY" value="5" />
        </attr>

    </declare-styleable>

    <declare-styleable name="CustomInsertDataView">
        <attr name="icon" format="reference" />

    </declare-styleable>


    <declare-styleable name="BaseTextView">
        <attr name="fontType" format="enum">
            <enum name="Regular" value="0" />
            <enum name="Light" value="1" />
            <enum name="Medium" value="2" />
            <enum name="Bold" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BaseEditText">
        <attr name="fontTypeEditText" format="enum">
            <enum name="Regular" value="0" />
            <enum name="Light" value="1" />
            <enum name="Medium" value="2" />
            <enum name="Bold" value="3" />
        </attr>
    </declare-styleable>


    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color" />
        <attr name="dropDownListPaddingBottom" format="dimension" />
        <attr name="backgroundSelector" format="integer" />
        <attr name="textTint" format="color" />
    </declare-styleable>
</resources>
