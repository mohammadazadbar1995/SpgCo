<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/st_evaluation_cardView"
        app:cardCornerRadius="@dimen/all_raduis_app"
        android:layout_margin="@dimen/margin_1">

        <com.example.sgpco.baseView.BaseRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <com.example.sgpco.baseView.BaseImageView
                android:id="@+id/edtIcon"
                android:layout_width="@dimen/margin_pic_24"
                android:layout_height="@dimen/margin_pic_24"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/inner_margin_content"

                android:visibility="visible" />


            <com.example.sgpco.baseView.BaseTextView
                android:id="@+id/tvTitle"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_1"
                android:layout_toEndOf="@+id/edtIcon"
                android:text="" />

            <com.example.sgpco.baseView.BaseEditText
                android:id="@+id/edtBody"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text_view"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/image"
                android:layout_toEndOf="@+id/tvTitle"
                android:background="@null"
                android:text="" />

            <com.example.sgpco.baseView.BaseImageView
                android:id="@+id/image"
                android:layout_width="@dimen/margin_pic_24"
                android:layout_height="@dimen/margin_pic_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/inner_margin_content"
                android:visibility="visible" />
        </com.example.sgpco.baseView.BaseRelativeLayout>


    </android.support.v7.widget.CardView>
</merge>