<com.spg.sgpco.baseView.BaseToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="-8dp"
    android:background="@color/toolbarBack"
    android:elevation="@dimen/st_evaluation_appbar"
    android:gravity="center"
    android:minHeight="?attr/actionBarSize">

    <com.spg.sgpco.baseView.BaseRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-10dp">


        <com.spg.sgpco.baseView.BaseImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/icon_32"
            android:layout_height="@dimen/icon_32"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_1"
            app:srcCompat="@drawable/ic_menu_white" />


        <com.spg.sgpco.baseView.BaseTextView
            android:id="@+id/tvCenterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="گیتی پسند"
            android:textColor="@color/toolbarFore"
            android:textSize="@dimen/text_size_4"
            android:visibility="visible"
            app:fontType="Medium" />


    </com.spg.sgpco.baseView.BaseRelativeLayout>


</com.spg.sgpco.baseView.BaseToolbar>
