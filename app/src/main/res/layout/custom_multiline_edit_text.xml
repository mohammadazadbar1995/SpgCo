<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.spg.sgpco.baseView.BaseRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"

        >

        <com.spg.sgpco.baseView.BaseTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginEnd="@dimen/margin_1"
            android:textColor="@color/primaryTextColor"
            app:fontType="Regular" />

        <com.spg.sgpco.baseView.BaseEditText
            android:id="@+id/edtBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvTitle"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_toStartOf="@+id/image"
            android:background="@null"
            android:gravity="top"
            android:maxLines="6"
            android:textColor="@color/secondryTextColor"
            app:fontTypeEditText="Light" />

        <com.spg.sgpco.baseView.BaseImageView
            android:id="@+id/image"
            android:layout_width="@dimen/icon_18"
            android:layout_height="@dimen/icon_18"
            android:layout_below="@+id/tvTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_3"
            android:visibility="visible" />
    </com.spg.sgpco.baseView.BaseRelativeLayout>
</merge>