<?xml version="1.0" encoding="utf-8"?>

<com.spg.sgpco.baseView.BaseRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <com.spg.sgpco.baseView.BaseLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/image_size_on_splash"
            android:layout_height="@dimen/image_size_on_splash"
            app:srcCompat="@drawable/logo" />


        <com.spg.sgpco.baseView.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_spg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_3"
            app:fontType="Medium" />

        <com.spg.sgpco.baseView.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_spg_en"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_4"
            app:fontType="Medium" />
    </com.spg.sgpco.baseView.BaseLinearLayout>

    <com.spg.sgpco.baseView.BaseLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/outer_margin" />
    </com.spg.sgpco.baseView.BaseLinearLayout>

</com.spg.sgpco.baseView.BaseRelativeLayout>

